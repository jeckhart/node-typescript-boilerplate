{
  "name": "node-typescript-boilerplate",
  "version": "0.4.0",
  "description": "A tiny boilerplate node server using typescript, webpack, and express",
  "main": "index.js",
  "scripts": {
    "build:dev": "npm run clean:dist && ts-node -P config ./node_modules/.bin/webpack --config config/webpack.dev.ts --progress --profile",
    "build": "npm run build:dev",
    "clean:dist": "npm run rimraf -- dist ts-build",
    "clean": "npm cache clean && npm run rimraf -- node_modules dist",
    "lint": "npm run tslint \"src/**/*.ts\"",
    "rimraf": "rimraf",
    "server:dev": "nodemon --watch dist dist/app.js",
    "start": "npm run server:dev",
    "test": "npm run lint",
    "tslint": "tslint",
    "watch:dev": "npm run build:dev -- --watch",
    "watch": "run-p watch:dev server:dev"
  },
  "keywords": [],
  "author": "John Eckhart <jeckhart@yodle.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/dotenv": "^2.0.20",
    "@types/express": "^4.0.35",
    "@types/webpack": "^2.2.6",
    "@types/webpack-merge": "^0.0.4",
    "@types/webpack-notifier": "^1.5.1",
    "babel-core": "^6.23.1",
    "babel-loader": "^6.3.2",
    "babel-preset-stage-0": "^6.22.0",
    "nodemon": "^1.11.0",
    "npm-run-all": "^4.0.2",
    "rimraf": "^2.6.1",
    "source-map-loader": "^0.1.6",
    "ts-loader": "^2.0.1",
    "ts-node": "^2.1.0",
    "tslint": "^4.4.2",
    "tslint-loader": "^3.4.2",
    "typescript": "^2.1.6",
    "webpack": "^2.2.1",
    "webpack-merge": "^3.0.0",
    "webpack-notifier": "^1.5.0"
  },
  "dependencies": {
    "@types/node": "^7.0.5",
    "babel-preset-es2015": "^6.22.0",
    "body-parser": "^1.16.1",
    "cookie-parser": "^1.4.3",
    "debug": "^2.6.1",
    "dotenv": "^4.0.0",
    "express": "^4.14.1",
    "morgan": "^1.8.1",
    "serve-favicon": "^2.4.0",
    "source-map-support": "^0.4.11"
  },
  "repository": "https://github.com/jeckhart/node-typescript-boilerplate.git"
}
